<style type="text/css">
  {% render 'common-css' with section as section %}

  {% if section.settings.enableCarousel %}
  #s--{{-section.id}} .swiper:not(.swiper-initialized) .logolist__logo {
    margin-right: {{ section.settings.spaceBetween }}px;
  }

  @media screen and (min-width: 0px) and (max-width: 767px) {
    #s--{{ section.id }} .logolist__logo {
      {% if section.settings.productCardMobile >= section.blocks.size %}
        {%- if section.blocks.size == 0 -%}
        {%- assign div = 4 -%}
        {%- else -%}
        {%- assign div = section.blocks.size -%}
        {%-endif-%}
        width: {{100 | divided_by: div | at_least: 20}}% !important;
      {% else %}
        width: {{ 100 | divided_by: section.settings.productCardMobile | at_least: 20 }}%;
      {% endif %}
    }
  
    {% if section.settings.productCardMobile >= section.blocks.size %}
      #s--{{ section.id }} .logolist__logo {
        margin-right: 0 !important;
        padding: 4px;
      }
    {% endif %}
  }
  
  @media screen and (min-width: 768px) and (max-width: 1024px) {
    #s--{{ section.id }} .logolist__logo {
      {% if section.settings.productCardTablet >= section.blocks.size %}
        {%- if section.blocks.size == 0 -%}
        {%- assign div = 4 -%}
        {%- else -%}
        {%- assign div = section.blocks.size -%}
        {%-endif-%}
        width: {{100 | divided_by: div | at_least: 20}}% !important;
      {% else %}
        width: {{ 100 | divided_by: section.settings.productCardTablet | at_least: 20 }}%;
      {% endif %}
    }
  
    {% if section.settings.productCardTablet >= section.blocks.size %}
      #s--{{ section.id }} .logolist__logo {
        margin-right: 0 !important;
        padding: 4px;
      }
    {% endif %}
  }
  
  @media screen and (min-width: 1025px) {
    #s--{{ section.id }} .logolist__logo {
      {% if section.settings.productCardDesktop >= section.blocks.size %}
        {%- if section.blocks.size == 0 -%}
        {%- assign div = 4 -%}
        {%- else -%}
        {%- assign div = section.blocks.size -%}
        {%-endif-%}
        width: {{100 | divided_by: div | at_least: 20}}% !important;
      {% else %}
        width: {{ 100 | divided_by: section.settings.productCardDesktop | at_least: 20 }}%;
      {% endif %}
    }
  
    {% if section.settings.productCardDesktop >= section.blocks.size %}
      #s--{{ section.id }} .logolist__logo {
        margin-right: 0 !important;
        padding: 4px;
      }
    {% endif %}
  }
  {% else %}
  #s--{{-section.id}} .logolist__logo {
    {%- if section.blocks.size == 0 -%}
    {%- assign div = 4 -%}
    {%- else -%}
    {%- assign div = section.blocks.size -%}
    {%-endif-%}
    width: {{100 | divided_by: div | at_least: 20}}%;
  }
  {% endif %}

  #s--{{-section.id}} .logolist__logo img {
      {% if section.settings.hover == "opacitybw" or section.settings.hover == "opacity" %}
      opacity: 0.75;
      {% endif %}
      {% if section.settings.hover == "opacitybw" or section.settings.hover == "bw" %}
      filter: saturate(0);
      {% endif %}
      transition: all 0.15s;
  }

  {% unless section.settings.hover == "none" %}
  #s--{{-section.id}} .logolist__logo:hover img {
    opacity: 1;
    filter: saturate(1);
  }
  {% endunless %}
</style>

{% assign customID = section.settings.custom_id %}

<div
  id="s--{{section.id}}"
  {% unless section.settings.backgroundImage == null -%}
    {% render 'background', image: section.settings.backgroundImage %}
  {%- endunless %}
  class="{% render 'common-class', section: section, class: 'row', bg: true %}"
  {% if section.settings.enableCarousel %}
    data-bstr-carousel
    data-bstr-carousel-options='
      {
        "slidesPerView": {{ section.settings.productCardMobile }},
        "loop": true,
        "allowTouchMove": {% if section.settings.enableDragging %}true{% else %}false{% endif %},
        "loopFillGroupWithBlank": true,
        "autoplay": {% if section.settings.enableAutoplay %}{ "delay": {{ section.settings.slideSpeed | times: 1000 }}, "disableOnInteraction": false }{% else %}false{% endif %},
        "spaceBetween": {{ section.settings.spaceBetween }},
        "autoHeight": {{ section.settings.enableAutoHeight }},
        "breakpoints": {
          "768": {"slidesPerView": {{ section.settings.productCardTablet }}},
          "1025": {"slidesPerView": {{ section.settings.productCardDesktop }}}
        }
      }
    '
  {% endif %}
>
  {% if section.settings.overlayOpacity > 0 %}
    <div
      class="overlay"
      style="opacity: {{section.settings.overlayOpacity | times: 0.01}}; background-color: {{section.settings.overlayColor}};"
    ></div>
  {% endif %}
  <div
    id="{{customID}}"
    class="logolist__holder {{ section.settings.horizontalAlignment }} layout__content s__content">
    {% render 'block__general--heading' with section as section %}
    {% if section.settings.enableCarousel %}
      <div class="swiper" data-bstr-carousel-items>
        <div class="swiper-wrapper">
          {%- for logo in section.blocks %}
            {% if logo.settings.logoLink != blank %}
              <a href="{{logo.settings.logoLink}}" class="logolist__logo swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
                {%- render 'ratio-image', ratioType: 'vw', dratio: '25', mratio: '50', image: logo.settings.logo, alt: logo.settings.logo.alt -%}
              </a>
            {% else %}
              <span class="logolist__logo swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
                {%- render 'ratio-image', ratioType: 'vw', dratio: '25', mratio: '50', image: logo.settings.logo, alt: logo.settings.logo.alt -%}
              </span>
            {% endif %}
          {% else %}
            {% for i in (1..4) %}
              <span class="logolist__logo swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
                {{- 'product-' | append: i | placeholder_svg_tag: 'svg__thumb' -}}
              </span>
            {% endfor %}
          {% endfor %}
        </div>

        {% if section.blocks.size > 1 and section.settings.buttonDisplayFor != 'hide--both' %}
          <button
            data-bstr-slider-button="-"
            class="slider__button {{ section.settings.buttonDisplayFor }}"
            aria-label="Previous"
            data-bstr-carousel-button-prev
          >
            <i class="uil uil-angle-left-b"></i>
          </button>
          <button
            data-bstr-slider-button="+"
            class="slider__button slider__button--next {{ section.settings.buttonDisplayFor }}"
            aria-label="Next"
            data-bstr-carousel-button-next
          >
            <i class="uil uil-angle-right-b"></i>
          </button>
        {% endif %}
      </div>
    {% else %}
      {%- for logo in section.blocks %}
        {% if logo.settings.logoLink != blank %}
          <a href="{{logo.settings.logoLink}}" class="logolist__logo{% if settings.easeIn %} ease-in{% endif %}">
            {%- render 'ratio-image', ratioType: 'vw', dratio: '25', mratio: '50', image: logo.settings.logo, alt: logo.settings.logo.alt -%}
          </a>
        {% else %}
          <span class="logolist__logo{% if settings.easeIn %} ease-in{% endif %}">
            {%- render 'ratio-image', ratioType: 'vw', dratio: '25', mratio: '50', image: logo.settings.logo, alt: logo.settings.logo.alt -%}
          </span>
        {% endif %}
      {% else %}
        {% for i in (1..4) %}
          <span class="logolist__logo{% if settings.easeIn %} ease-in{% endif %}">{{ 'product-' | append: i | placeholder_svg_tag: 'svg__thumb' }}</span>
        {% endfor %}
      {% endfor %}
    {% endif %}

    {% if section.settings.enableCarousel and section.settings.enablePagination %}
      <div class="layout__content swiper-pagination" data-bstr-carousel-pagination></div>
    {% endif %}
  </div>
</div>

