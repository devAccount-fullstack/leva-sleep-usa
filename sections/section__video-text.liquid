<style>
{% render 'common-css' with section as section %}

{% if section.settings.overlayOpacity > 0 %}
.overlay--{{-section.id}} {
    opacity: {{section.settings.overlayOpacity | times: 0.01}};
    background-color: {{section.settings.overlayColor}};
}
{% endif %}

#s--{{section.id}} .s__content {
  {% if section.settings.imagePosition == "right" %}
  flex-direction: row-reverse;
  {%endif%}
  padding: {{section.settings.padding}}px;
}

{% if section.settings.layout == "stretchContent" %}
#s--{{section.id}} .tximage__image {
  padding: 0px;
}
{%endif%}

#tximage--{{section.id}} img {
  width: 100%;
}

#s--{{section.id}} .accordion__item {
    background: {{section.settings.backgroundColor}};
    text-align: left;
}

#s--{{section.id}} .accordion__item--title {
    padding: 0.5rem 1rem;
}

#s--{{section.id}} .accordion__item--content p, #s--{{section.id}} .accordion__item--title {
    color: {% unless section.settings.contentColor contains 'rgba(0,0,0,0)' %}{{section.settings.contentColor}}{% else %}initial{% endunless %};
}

#s--{{section.id}} .accordion {
    max-width: 800px;
    margin: auto;
}

#s--{{section.id}} .accordion__input{
    display: none;
}

.video-popup-container {
    position: relative;
    text-align: center;
}

.video-popup-trigger {
    background-color: #ffffff;
    color: #000;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    font-size: 16px;
    border-radius: 5px;
}

.video-popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    justify-content: center;
    align-items: center;
}

.video-popup {
    background: white;
    padding: 20px;
    border-radius: 10px;
    position: relative;
    width: 80%;
    max-width: 600px;
}

.video-popup video {
    width: 100%;
    border-radius: 5px;
}

.close-popup {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    cursor: pointer;
}

@media only screen and (max-width: 768px){
    #s--{{section.id}} .accordion{
        padding: {{ section.settings.vertPaddingAccord }}px {{ section.settings.horPaddingAccord }}px;
    }
}

#colorcode{}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const trigger = document.querySelector(".video-popup-trigger");
    const overlay = document.querySelector(".video-popup-overlay");
    const closeBtn = document.querySelector(".close-popup");
    const video = overlay.querySelector("video");

    if (trigger && overlay && closeBtn && video) {
        trigger.addEventListener("click", function() {
            overlay.style.display = "flex";
            video.play(); // Autoplay when the popup opens
        });

        closeBtn.addEventListener("click", function() {
            overlay.style.display = "none";
            video.pause(); // Pause video when popup closes
            video.currentTime = 0; // Reset video to start
        });

        overlay.addEventListener("click", function(e) {
            if (e.target === overlay) {
                overlay.style.display = "none";
                video.pause();
                video.currentTime = 0;
            }
        });
    }
});

</script>

{% assign iWidth = section.settings.imageWidth %}
{% assign tWidth = 12 | minus: section.settings.imageWidth %}
{% assign customID = section.settings.custom_id %}

<div id="s--{{section.id}}"
{% unless section.settings.backgroundImage == nil -%}{% render 'background', image: section.settings.backgroundImage %}{%- endunless %}
class="{% render 'common-class', section: section, class: 'row', bg: true, vAlign: false %}">
  {% if section.settings.overlayOpacity > 0 %}
    <div class="overlay overlay--{{-section.id}}"></div>
  {% endif %}
  <div id="{{customID}}" class="row s__content {{ section.settings.verticalAlignment }} layout__content">
    <div class="col-12 col-md-{{-iWidth}} tximage__video video--responsive">
        {% unless section.settings.video == blank %}
            {% if section.settings.video.type == 'youtube' %}
                <iframe class="lazyload" id="player" type="text/html"
                data-src="https://www.youtube.com/embed/{{-section.settings.video.id}}"
                frameborder="0"></iframe>
            {% else %}
                <iframe class="lazyload" data-src="https://player.vimeo.com/video/{{-section.settings.video.id}}" frameborder="0" allowfullscreen></iframe>
            {% endif %}
            
        {% endunless %}
        {% if section.settings.mp4_video != blank %}
              <div class="video-popup-container">
                  <button class="video-popup-trigger button button--primary button--filled button--primary__filled font__size--base font__family--base button__animation--none eased-in"> See How It Works </button>
                  <div class="video-popup-overlay">
                      <div class="video-popup">
                          <span class="close-popup">&times;</span>
                          <video controls>
                              <source src="{{ section.settings.mp4_video }}" type="video/mp4">
                              Your browser does not support the video tag.
                          </video>
                      </div>
                  </div>
              </div>
          {% endif %}
    </div>
    <div class="inherit col-12 col-md-{{-tWidth}} {{section.settings.horizontalAlignment}} tximage__txt">
      {%- for block in section.blocks %}
        {% if block.type == '@app' %}
          <div class="no-gap s__block s__block--{{-block.type}} unflex col-12 {{ section.settings.horizontalAlignment }} margin__bottom--12">
            {% render block %}
          </div>
          {% continue %}
        {% endif %}
        
        <input class="accordion__input" type="radio" id="{{section.id}}--close" name="{{section.id}}">
        {% if block.type == 'accordionBlock' %}
            <div id="maxWidth--{{-section.id}}" class="row max-width--content accordion {{ section.settings.horizontalAlignment }}">
                {% if block.settings.question == empty or block.settings.answer == empty %}{% continue %}{% endif %}
                <div class="accordion__item" {{block.shopify__attributes}}>
                    <input type="checkbox" id="accordion-{{ block.id }}" class="accordion__input" {% if block.settings.openAccordion %}checked{% endif %}>
                    <label for="accordion-{{ block.id }}" class="accordion__item--title">{{block.settings.question}}</label>
                    <div class="accordion__item--content">{{block.settings.answer}}</div>
                </div>
            </div>
        {% endif %}
        <div class="no-gap s__block s__block--{{-block.type}} {%if block.settings.wideButton or block.type == 'separator' or block.settings.fullWidth%}col-12 {{ section.settings.horizontalAlignment }}{%endif%} margin__bottom--12">
          {% render 'get-block' with block as block %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

