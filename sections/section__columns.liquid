<style type="text/css">
  {% render 'common-css' with section as section %}

  #s--{{-section.id}} .columns__column {
      padding: 0px {{section.settings.colGap | divided_by: 2}}px;
      min-height: {{section.settings.colHeight}}px;
      overflow: hidden;
  }

  {% if section.settings.enableCarousel %}
  #s--{{-section.id}} .swiper:not(.swiper-initialized) .columns__column {
    margin-right: {{ section.settings.spaceBetween }}px;
  }

  @media screen and (min-width: 0px) and (max-width: 767px) {
    #s--{{ section.id }} .columns__column {
      width: {{ 100 | divided_by: section.settings.productCardMobile | at_least: 20 }}%{% if section.settings.productCardMobile >= section.blocks.size %} !important{% endif %};
    }
  
    {% if section.settings.productCardMobile >= section.blocks.size %}
      #s--{{ section.id }} .columns__column {
        margin-right: 0 !important;
      }
    {% endif %}
  }
  
  @media screen and (min-width: 768px) and (max-width: 1024px) {
    #s--{{ section.id }} .columns__column {
      width: {{ 100 | divided_by: section.settings.productCardTablet | at_least: 20 }}%{% if section.settings.productCardTablet >= section.blocks.size %} !important{% endif %};
    }
  
    {% if section.settings.productCardTablet >= section.blocks.size %}
      #s--{{ section.id }} .columns__column {
        margin-right: 0 !important;
      }
    {% endif %}
  }
  
  @media screen and (min-width: 1025px) {
    #s--{{ section.id }} .columns__column {
      width: {{ 100 | divided_by: section.settings.productCardDesktop | at_least: 20 }}%{% if section.settings.productCardDesktop >= section.blocks.size %} !important{% endif %};
    }
  
    {% if section.settings.productCardDesktop >= section.blocks.size %}
      #s--{{ section.id }} .columns__column {
        margin-right: 0 !important;
      }
    {% endif %}
  }  
  {% endif %}
</style>

{% assign customID = section.settings.custom_id %}

<div
  id="s--{{section.id}}"
  {% unless section.settings.backgroundImage == null -%}
    {% render 'background', image: section.settings.backgroundImage %}
  {%- endunless %}
  class="{% if settings.easeIn %}ease-in{% endif %} {% render 'common-class', section: section, class: 'row section__columns', bg: true %}"
  {% if section.settings.enableCarousel %}
    data-bstr-carousel
    data-bstr-carousel-options='
      {
        "slidesPerView": {{ section.settings.productCardMobile }},
        "loop": true,
        "allowTouchMove": {% if section.settings.enableDragging %}true{% else %}false{% endif %},
        "loopFillGroupWithBlank": true,
        "autoplay": {% if section.settings.enableAutoplay %}{ "delay": {{ section.settings.slideSpeed | times: 1000 }}, "disableOnInteraction": false }{% else %}false{% endif %},
        "spaceBetween": {{ section.settings.spaceBetween }},
        "autoHeight": {{ section.settings.enableAutoHeight }},
        "breakpoints": {
          "768": {"slidesPerView": {{ section.settings.productCardTablet }}},
          "1025": {"slidesPerView": {{ section.settings.productCardDesktop }}}
        }
      }
    '
  {% endif %}
>
  {% if section.settings.overlayOpacity > 0 %}
    <div
      class="overlay"
      style="opacity: {{section.settings.overlayOpacity | times: 0.01}}; background-color: {{section.settings.overlayColor}};"
    ></div>
  {% endif %}
  <div
    id="{{customID}}"
    class="row {{ section.settings.horizontalAlignment }} {{ section.settings.verticalAlignment }} s__content layout__content">
    {% render 'block__general--heading' with section as section %}
    {% if section.settings.enableCarousel %}
      <div class="swiper" data-bstr-carousel-items>
        <div class="swiper-wrapper">
          {%- for block in section.blocks %}
            <div
              id="column--{{-block.id}}"
              class="s__block s__block--{{-block.type}} {{section.settings.textAlign}} {{section.settings.contentAlign}} columns__column{% if section.settings.enableCarousel %} swiper-slide{% endif %}"
            >
              {% render 'get-block' with block as block %}
            </div>
          {% else %}
            {% for i in (1..3) %}
              <div
                id="column--{{-block.id}}"
                class="col-12 s__block s__block--{{-block.type}} start middle columns__column col-md-4 {% if section.settings.enableCarousel %} swiper-slide{% endif %}"
              >
                <div class="column__media col-12" {{ block.shopify__attributes }}>
                  {{ 'product-' | append: i | placeholder_svg_tag: 'svg__thumb' }}
                </div>
                <div class="column__text col-12 unflex">
                  <h3 class="h-reset">Column {{ i }}</h3>
                  <p>This is a place for all your text.</p>
                </div>
              </div>
            {% endfor %}
          {% endfor %}
        </div>
  
        {% if section.blocks.size > 1 and section.settings.buttonDisplayFor != 'hide--both' %}
          <button
            data-bstr-slider-button="-"
            class="slider__button {{ section.settings.buttonDisplayFor }}"
            aria-label="Previous"
            data-bstr-carousel-button-prev
          >
            <i class="uil uil-angle-left-b"></i>
          </button>
          <button
            data-bstr-slider-button="+"
            class="slider__button slider__button--next {{ section.settings.buttonDisplayFor }}"
            aria-label="Next"
            data-bstr-carousel-button-next
          >
            <i class="uil uil-angle-right-b"></i>
          </button>
        {% endif %}
      </div>
    {% else %}
      {%- for block in section.blocks %}
        <div
          id="column--{{-block.id}}"
          class="col-12 s__block s__block--{{-block.type}} {{section.settings.textAlign}} {{section.settings.contentAlign}} columns__column {{section.settings.colCount}}"
        >
          {% render 'get-block' with block as block %}
        </div>
      {% else %}
        {% for i in (1..3) %}
          <div
            id="column--{{-block.id}}"
            class="col-12 s__block s__block--{{-block.type}} start middle columns__column col-md-4"
          >
            <div class="column__media col-12" {{ block.shopify__attributes }}>
              {{ 'product-' | append: i | placeholder_svg_tag: 'svg__thumb' }}
            </div>
            <div class="column__text col-12 unflex">
              <h3 class="h-reset">Column {{ i }}</h3>
              <p>This is a place for all your text.</p>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    {% endif %}

    {% if section.settings.enableCarousel and section.settings.enablePagination %}
      <div class="layout__content swiper-pagination" data-bstr-carousel-pagination></div>
    {% endif %}
  </div>
</div>

