<style type="text/css">
  {% render 'common-css' with section as section %}

  {% if section.settings.enableCarousel %}
    #s--{{-section.id}} .swiper:not(.swiper-initialized) .card--holder {
      margin-right: {{ section.settings.spaceBetween }}px;
    }

    @media screen and (min-width: 0px) and (max-width: 767px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardMobile | at_least: 20 }}%{% if section.settings.productCardMobile >= section.settings.productCount %} !important{% endif %};
      }
    
      {% if section.settings.productCardMobile >= section.settings.productCount %}
        #s--{{ section.id }} .card--holder {
          margin-right: 0 !important;
        }
      {% endif %}
    }
    
    @media screen and (min-width: 768px) and (max-width: 1024px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardTablet | at_least: 20 }}%{% if section.settings.productCardTablet >= section.settings.productCount %} !important{% endif %};
      }
    
      {% if section.settings.productCardTablet >= section.settings.productCount %}
        #s--{{ section.id }} .card--holder {
          margin-right: 0 !important;
        }
      {% endif %}
    }
    
    @media screen and (min-width: 1025px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardDesktop | at_least: 20 }}%{% if section.settings.productCardDesktop >= section.settings.productCount %} !important{% endif %};
      }
    
      {% if section.settings.productCardDesktop >= section.settings.productCount %}
        #s--{{ section.id }} .card--holder {
          margin-right: 0 !important;
        }
      {% endif %}
    }
  {% endif %}
</style>

{% if section.settings.cardDesktop == "default" %}
  {% assign desktop = settings.cardDesktop %}
  {% else %}
  {% assign desktop = section.settings.cardDesktop %}
  {% endif %}
  
  {% if section.settings.cardMobile == "default" %}
  {% assign mobile = settings.cardMobile %}
  {% else %}
  {% assign mobile = section.settings.cardMobile %}
  {% endif %}
  
{% assign customID = section.settings.custom_id %}

<div id="s--{{section.id}}" class="{% render 'common-class', section: section, class: 'row', vAlign: false %}"
  {% if section.settings.enableCarousel %}
  data-bstr-carousel
  data-bstr-carousel-options='
    {
      "slidesPerView": {{ section.settings.productCardMobile }},
      "loop": true,
      "allowTouchMove": {% if section.settings.enableDragging %}true{% else %}false{% endif %},
      "loopFillGroupWithBlank": true,
      "autoplay": {% if section.settings.enableAutoplay %}{ "delay": {{ section.settings.slideSpeed | times: 1000 }}, "disableOnInteraction": false }{% else %}false{% endif %},
      "spaceBetween": {{ section.settings.spaceBetween }},
      "autoHeight": {{ section.settings.enableAutoHeight }},
      "breakpoints": {
        "768": {"slidesPerView": {{ section.settings.productCardTablet }}},
        "1025": {"slidesPerView": {{ section.settings.productCardDesktop }}}
      }
    }
  '
{% endif %}>
  <div id="{{customID}}" class="row layout__content s__content">
    {% render 'block__general--heading' with section as section %}
    {% if section.settings.enableCarousel %}
      <div class="swiper" data-bstr-carousel-items>
        <div class="swiper-wrapper">
          {% for product in collections[section.settings.collection].products limit: section.settings.productCount %}
            <div class="card--holder swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
              {% render 'product-card-default', product: product, dsize: '3' %}
            </div>
          {% else %}
            {% assign maxi = section.settings.productCount | at_most: 6 %}
            {% for i in (1..maxi) %}
              <div class="card--holder swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
                {% render 'product-card-fake', 'i:i' %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
  
        {% if section.settings.productCount > 1 and section.settings.buttonDisplayFor != 'hide--both' %}
          <button
            data-bstr-slider-button="-"
            class="slider__button {{ section.settings.buttonDisplayFor }}"
            aria-label="Previous"
            data-bstr-carousel-button-prev
          >
            <i class="uil uil-angle-left-b"></i>
          </button>
          <button
            data-bstr-slider-button="+"
            class="slider__button slider__button--next {{ section.settings.buttonDisplayFor }}"
            aria-label="Next"
            data-bstr-carousel-button-next
          >
            <i class="uil uil-angle-right-b"></i>
          </button>
        {% endif %}
      </div>
    {% else %}
      <div class="row">
        {% for product in collections[section.settings.collection].products limit: section.settings.productCount %}
          <div class="col-{{mobile}} col-md-{{-desktop}} card--holder{% if settings.easeIn %} ease-in{% endif %}">
            {% render 'product-card-default', product: product, dsize: '3' %}
          </div>
        {% else %}
          {% assign maxi = section.settings.productCount | at_most: 6 %}
          {% for i in (1..maxi) %}
            <div class="col-{{mobile}} col-md-{{-desktop}} card--holder{% if settings.easeIn %} ease-in{% endif %}">
              {% render 'product-card-fake', 'i:i' %}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.enableCarousel and section.settings.enablePagination %}
      <div class="layout__content swiper-pagination" data-bstr-carousel-pagination></div>
    {% endif %}

    {% if section.settings.showMore %}
      <div class="col-12 showMore {{section.settings.showMoreAlignment}}{% if settings.easeIn %} ease-in{% endif %}">
        {% unless section.settings.showMoreText == empty %}
          {% assign smt = section.settings.showMoreText %}
        {% else %}
          {% assign smt = 'general.buttons.show_more' | t %}
        {% endunless %}
        {% render 'button', type: 'primary', text: smt, url: collections[section.settings.collection].url %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
    "name": "Featured collection",
    "settings": [
    {
      "type": "header",
      "content": "Section ID"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Add custom section ID"
    },
    {
      "type": "header",
      "content": "Section layout"
    },
    {
      "type": "radio",
      "id": "displayFor",
      "label": "Show this section on",
      "options": [
        { "value": "display--both", "label": "All devices" },
        { "value": "hide-desktop", "label": "Mobile only" },
        { "value": "hide-mobile", "label": "Desktop only" }
      ],
      "default": "display--both"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section layout",
      "options": [
        { "value": "default", "label": "Global default" },
        { "value": "boxed", "label": "Boxed" },
        { "value": "stretchBg", "label": "Full width background" },
        { "value": "stretchContent", "label": "Full width" }
      ],
      "default": "default"
    },
    {
      "type": "checkbox",
      "id": "nomargin",
      "default": false,
      "label": "Remove section's bottom margin"
    },
    {
      "type": "textarea",
      "id": "scopedCSS",
      "label": "Section-scoped CSS",
      "info": "Rules beginning with ##scoped will be scoped to this section. (Example: ##scoped h1 {color: blue})"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Minimum height",
      "default": 0,
      "min": 0,
      "max": 800,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Section padding",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Section background"
    },
    {
      "id": "backgroundColor",
      "type": "color",
      "default": "rgba(0,0,0,0)",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Section heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Check out this section's heading"
    },
    {
      "type": "color",
      "id": "headingColor",
      "default": "rgba(0,0,0,0)",
      "label": "Heading Color"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section subheading",
      "default": "THIS IS A SUBHEADING"
    },
    {
      "type": "color",
      "id": "subheadingColor",
      "default": "rgba(0,0,0,0)",
      "label": "Subheading Color"
    },
    {
      "type": "select",
      "id": "subheadingPosition",
      "label": "Subheading position",
      "options": [
        { "value": "above", "label": "Above heading" },
        { "value": "below", "label": "Below heading" }
      ],
      "default": "above"
    },
    {
      "type": "select",
      "id": "headingAlignment",
      "label": "Heading alignment (left to right)",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Collection settings"
    },
    {
      "type": "collection",
      "label": "Featured collection",
      "id": "collection"
    },
    {
      "type": "range",
      "id": "productCount",
      "label": "Number of products to show",
      "default": 4,
      "max": 32,
      "step": 1,
      "min": 1,
      "unit": "prd"
    },
    {
      "type": "header",
      "content": "Section content"
    },
    {
      "type": "checkbox",
      "id": "showMore",
      "label": "Enable 'Show more' button",
      "default": true
    },
    {
      "type": "text",
      "id": "showMoreText",
      "label": "Button text"
    },
    {
      "type": "select",
      "id": "showMoreAlignment",
      "label": "Button alignment (left to right)",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Slider options"
    },
    {
      "type": "checkbox",
      "id": "enableCarousel",
      "label": "Enable slider",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enableAutoplay",
      "label": "Enable autoplay",
      "info": "If checked, slider will automatically rotate between slides",
      "default": true
    },
    {
      "type": "range",
      "id": "slideSpeed",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "Sec",
      "label": "Slide Speed",
      "default": 3
    },
    {
      "type": "range",
      "id": "spaceBetween",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Space between slides",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "enableDragging",
      "label": "Enable dragging",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enablePagination",
      "label": "Enable pagination",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enableAutoHeight",
      "label": "Auto height",
      "default": false,
      "info": "Adjusts slider height to match the height of the current slide"
    },
    {
      "type": "radio",
      "id": "buttonDisplayFor",
      "label": "Show Prev/Next button on",
      "options": [
        { "value": "display--both", "label": "All devices" },
        { "value": "hide-desktop", "label": "Mobile only" },
        { "value": "hide-mobile", "label": "Desktop only" },
        { "value": "hide--both", "label": "Hide all devices" }
      ],
      "default": "hide-mobile"
    },
    {
      "type": "range",
      "id": "productCardDesktop",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "How many cards per row (Desktop)",
      "default": 4
    },
    {
      "type": "range",
      "id": "productCardTablet",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "How many cards per row (Tablet)",
      "default": 2
    },
    {
      "type": "range",
      "id": "productCardMobile",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "How many cards per row (Mobile)",
      "default": 1
    },
    {
      "type": "header",
      "content": "Layout settings"
    },
    {
      "type": "select",
      "id": "cardDesktop",
      "label": "How many cards per row (Desktop)",
      "options": [
        {"value": "default", "label": "Global default"},
        {"value": "1-5", "label": "5"},
        {"value": "3", "label": "4"},
        {"value": "4", "label": "3"}
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "cardMobile",
      "label": "How many cards per row (Mobile)",
      "options": [
        {"value": "default", "label": "Global default"},
        {"value": "12", "label": "1"},
        {"value": "6", "label": "2"}
      ],
      "default": "default"
    }
  ],
  "presets": [
    {
      "category": "Products",
      "name": "Featured collection",
      "settings": {
        "height": 390,
        "padding": 35
      },
      "blocks": []
    }
  ]
}
{% endschema %}
