<div class='login-popup-container' data-login-popup-container >
    <div class="login-popup-overlay">
    </div>

    <div class="customer__form login-popup" data-login-popup-form>
        <div class="unflex section__row layout__content login-popup-title">
            <h1 class="h-reset">{{'customer_area.forms.sign_in_title'|t}}</h1>
        </div>
        
        {% form 'customer_login' %} {{ form.errors | default_errors }}
        
        {% assign login = 'customer_area.forms.login' | t %}
        
        <label for="customer_email">{{'customer_area.forms.email' | t }}</label>
        <input type="email" name="customer[email]" />
        
        <label for="customer_password">{{'customer_area.forms.password' | t }}</label>
        <input type="password" name="customer[password]" />
        
        {% render 'submit-button', text: login, type: 'primary', class: 'button--submit' %}
        {% endform %} 
        
        {% form 'recover_customer_password' %} {{ form.errors | default_errors }}
        
        <input type="checkbox" id="recover">
        <label style="display: inline-block;" class="button--notice" for="recover">{{'customer_area.forms.forgot_password' | t }}</label>
        <span class="button--notice-notmember">{{'customer_area.forms.not_a_member' | t }} </span>
        <span style="display: inline-block;" data-login-popup-register class="button--notice" > {{'customer_area.forms.register_here' | t }} </span>
        <div class="recover__password">
        <label for="customer_email">{{'customer_area.forms.email' | t }}</label>
        <input type="email" name="email" />
        <input class="button button--primary button--filled button--primary__filled" type="submit" value="Submit" />
        </div>
        
        {% endform %} 
    </div>

    <div class="customer__form register-popup" data-register-popup-form>

        <div class="unflex section__row layout__content login-popup-title">
            <h1 class="h-reset">{{'customer_area.forms.sign_up_title'|t}}</h1>
        </div>

        {% form 'create_customer' %} 
        {{ form.errors | default_errors }}
        
        <label for="first_name">{{'customer_area.account.first_name'|t}}</label>
        <input type="text" value="" name="customer[first_name]" />
        
        <label for="last_name">{{'customer_area.account.last_name'|t}}</label>
        <input type="text" value="" name="customer[last_name]"/>
        
        <label for="email">{{'customer_area.forms.email' | t}}</label>
        <input type="email" value="" name="customer[email]" />
        
        <label for="password">{{'customer_area.forms.password' | t}}</label>
        <input type="password" value="" name="customer[password]" />
        
        {% assign regt = 'customer_area.forms.register' | t %}
        {% render 'submit-button', text: regt, type: 'primary', class: 'button--submit' %}
        <span class="button--notice" data-login-popup-signin> {{'customer_area.forms.already_member' | t}} </span>
        {% endform %} 
    </div>
</div>
