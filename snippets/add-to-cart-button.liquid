{% assign no_selected_variant = false %}
{% assign add_to_cart_selection_text = 'general.buttons.add_to_cart_selection' | t %}
{% unless product.variants.size == 1 or product.has_only_default_variant %}
    {% unless product.selected_variant and settings.preselectSwatch != 'false' %}
        {% assign no_selected_variant = true %}
    {% endunless %}
{% endunless %}

{% assign button = button | default: 'addToCart' %}
{% assign color = button | append: 'Color' %}
{% assign color = settings[color] %}
{% assign type = button | append: 'Type' %}
{% assign type = settings[type] %}
{%- assign icon = button | append: 'Icon' -%}
{%- assign icon = settings[icon] -%}
{% if product.price == 0 and settings.freeShipping  %}
    {% assign text = settings.freeShippingText %}
{% else %}
    {% if text == blank %}
        {% assign text = 'general.buttons.add_to_cart' | t  %}
    {% endif %}
{% endif %}

{% if variant %}
{% unless quantity %}
{% assign quantity = 1 %}
{% endunless %}
{% endif %}

<button
data-buy-button="{{product.id}}"
data-original-text="{{-text-}}"
{{disabled}}
{% if no_selected_variant and product.variants.size > 1  %}disabled{% endif %}
class="button button--{{-button}} button--{{-color}} {% unless icon == 'none' %}button--icon{% endunless %}
{% unless type == 'default' -%}
button--{{-type}} button--{{-color-}}__{{-type}}
{%- else -%}
{% assign style = color | append: 'ButtonStyle' %}
button--{{-settings[style]}} button--{{-color-}}__{{-settings[style]}}
{%- endunless %} {{class-}}"

{% unless disabled %}
    {% if settings.ajaxType == "disabled" %}
        type="submit"
    {% else %}
        type="button"
        {% if variant %}
            onclick="BoosterTheme.cart.addToCartJSON(event, {items: [{id: {{variant}}, quantity: {{quantity}}}]});"
        {% else %}
            onclick="BoosterTheme.cart.addToCart(event);"
        {% endif %}
    {% endif %}
{% endunless -%}>
{% unless icon == 'none' %}
{% render 'get-icon' with icon as icon %}
{% endunless %}
{% if no_selected_variant and product.variants.size > 1  %}
    <span data-button-text>{{- add_to_cart_selection_text -}}</span> 
{% else %}
    <span data-button-text>{{- text -}}</span> 
{% endif %}
</button>